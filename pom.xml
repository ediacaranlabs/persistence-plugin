<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>br.com.uoutec</groupId>
	<artifactId>persistence-ediacaran-plugin</artifactId>
	<version>1.0.0</version>
	<packaging>jar</packaging>
	
	<organization>
		<name>UoUTec</name>
		<url>https://www.uoutec.com.br/</url>
	</organization>

	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<repositories>
		<repository>
			<id>uoutec-deploy</id>
			<url>https://www.uoutec.com.br/maven/deploy/</url>
		</repository>
	</repositories>

	<developers>
		<developer>
			<name>Afonso Brandao</name>
			<email>afonso.rbn@gmail.com</email>
			<organization>Brandao</organization>
			<organizationUrl>https://www.linkedin.com/in/brandaoafonso/</organizationUrl>
		</developer>
	</developers>
		
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
					<encoding>${project.build.sourceEncoding}</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.4</version>
				<executions>
					<execution>
						<id>copy-dependencies</id>
						<phase>process-sources</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<excludeScope>provided</excludeScope>
							<includeScope>runtime</includeScope>
							<outputDirectory>${project.build.directory}/lib/</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<!-- java -->
		<dependency>
			<groupId>javax</groupId>
			<artifactId>javaee-api</artifactId>
			<version>8.0</version>
			<scope>provided</scope>
		</dependency>
		<!-- plugins -->
		<dependency>
			<groupId>br.com.uoutec</groupId>
			<artifactId>system-ediacaran-plugin</artifactId>
			<version>1.0.0</version>
			<scope>provided</scope>
		</dependency>
		<!-- dependencies -->
		<!-- persistence -->
		<!-- hibernate -->
		<dependency>
			<groupId>org.hibernate</groupId>
			<artifactId>hibernate-core</artifactId>
			<version>5.6.5.Final</version>
			<scope>provided</scope>
		</dependency>
		<!-- transaction -->
		<dependency>
			<groupId>org.jboss.narayana.jta</groupId>
			<artifactId>cdi</artifactId>
			<version>5.10.5.Final</version>
		</dependency>
		<dependency>
			<groupId>org.jboss</groupId>
			<artifactId>jboss-transaction-spi</artifactId>
			<version>7.6.1.Final</version>
		</dependency>
		<dependency>
		    <groupId>org.jboss.narayana.jta</groupId>
		    <artifactId>jdbc</artifactId>
		    <version>5.12.4.Final</version>
		</dependency>
		<!-- ediacaran -->
		<dependency>
			<groupId>br.com.uoutec</groupId>
			<artifactId>application</artifactId>
			<version>1.0.0</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>br.com.uoutec</groupId>
			<artifactId>ediacaran</artifactId>
			<version>1.0.0</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>br.com.uoutec</groupId>
			<artifactId>ediacaran-weld</artifactId>
			<version>1.0.0</version>
			<scope>provided</scope>
		</dependency>
		<!--  Test -->
		<!--  Test -->
        <dependency>
			<groupId>br.com.uoutec</groupId>
			<artifactId>ediacaran-junit</artifactId>
